<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:background="@color/white_ffffff">

    <TextView
        android:id="@+id/tv_item_settings_one_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/black_242424"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textSize="@dimen/text_14sp"
        tools:text="title" />

    <TextView
        android:id="@+id/tv_item_settings_one_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/iv_item_settings_one_next_logo"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:singleLine="true"
        tools:text="Red light is always on"
        android:maxWidth="120dp"
        android:textColor="@color/gray_text_989898"
        android:textSize="@dimen/text_14sp" />
    <ImageView
        android:id="@+id/iv_item_settings_one_next_logo"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="11dp"
        android:src="@drawable/ic_little_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/view_item_settings_one_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="14dp"
        android:background="@color/gray_eeeeee"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>