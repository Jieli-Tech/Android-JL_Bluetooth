<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|bottom"
    android:orientation="horizontal"
    android:padding="12dp">

        <LinearLayout
            android:id="@+id/ll_tws_headset_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_tws_headset_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp">

                <ImageView
                    android:id="@+id/iv_tws_headset_left_img"
                    android:layout_width="wrap_content"
                    android:layout_height="95dp"
                    android:layout_alignEnd="@id/ll_tws_headset_left"
                    android:scaleType="centerInside"
                    tools:src="@drawable/ic_headset_left" />
                <LinearLayout
                    android:id="@+id/ll_tws_headset_left"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_tws_headset_left_img"
                    android:gravity="center_vertical">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tv_tws_headset_left_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_242424"
                        android:textSize="@dimen/text_13sp"
                        tools:text="@string/product_default_quantity" />
                    <ImageView
                        android:id="@+id/iv_tws_headset_quantity_left_img"
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="10dp"
                        android:scaleType="fitCenter"
                        tools:src="@drawable/ic_quantity_100" />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_tws_headset_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp">

                <ImageView
                    android:id="@+id/iv_tws_headset_right_img"
                    android:layout_width="wrap_content"
                    android:layout_height="95dp"
                    android:layout_alignStart="@id/ll_tws_headset_right"
                    android:scaleType="centerInside"
                    tools:src="@drawable/ic_headset_right" />
                <LinearLayout
                    android:id="@+id/ll_tws_headset_right"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_tws_headset_right_img"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/iv_tws_headset_quantity_right_img"
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        tools:src="@drawable/ic_quantity_100" />

                    <TextView
                        android:id="@+id/tv_tws_headset_right_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_242424"
                        android:textSize="@dimen/text_13sp"
                        tools:text="@string/product_default_quantity" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_tws_headset_charging_bin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <ImageView
                android:id="@+id/iv_tws_headset_charging_bin_img"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:scaleType="centerInside"
                tools:src="@drawable/ic_charging_bin" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_tws_headset_charging_bin_img"
                android:layout_alignStart="@id/iv_tws_headset_charging_bin_img"
                android:layout_alignEnd="@id/iv_tws_headset_charging_bin_img"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_tws_headset_charging_quantity_bin_img"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    tools:src="@drawable/ic_quantity_100" />

                <TextView
                    android:id="@+id/tv_tws_headset_charging_bin_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black_242424"
                    android:textSize="@dimen/text_13sp"
                    tools:text="@string/product_default_quantity" />
            </LinearLayout>
        </RelativeLayout>

</LinearLayout>