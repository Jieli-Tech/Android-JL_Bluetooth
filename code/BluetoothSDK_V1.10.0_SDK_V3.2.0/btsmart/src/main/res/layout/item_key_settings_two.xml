<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/gray_ECECEC"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingStart="12dp"
        android:paddingTop="9dp"
        android:paddingEnd="0dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/iv_key_settings_two_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            tools:src="@drawable/ic_headset_right_settings" />

        <ImageView
            android:id="@+id/iv_key_settings_two_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_little_right_arrow" />

        <TextView
            android:id="@+id/tv_key_settings_two_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="6dp"
            android:layout_toEndOf="@+id/iv_key_settings_two_img"
            android:textColor="@color/black_242424"
            android:textSize="@dimen/text_14sp"
            tools:text="左耳"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_key_settings_two_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/iv_key_settings_two_icon"
            android:layout_toEndOf="@+id/tv_key_settings_two_key"
            android:gravity="end|center_vertical"
            android:textColor="@color/gray_text_989898"
            tools:text="音量减"
            android:textSize="@dimen/text_14sp" />
    </RelativeLayout>


</LinearLayout>