<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="11dp"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="11dp"
    tools:background="@color/gray_F8FAFC">

    <com.jieli.btsmart.ui.widget.color_cardview.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white_ffffff"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardShadowColorEnd="@color/white_translate_01ffffff"
        app:cardShadowColorStart="@color/gray_translate_33cde6fb"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/ll_item_fitting_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_fitting_record_gains_type"
                android:layout_width="48dp"
                android:layout_height="22dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/ic_fitting_record_bg_purple"
                android:gravity="center"
                android:src="@drawable/ic_fitting_record_logo"
                android:textSize="@dimen/text_12sp"
                tools:text="双耳" />

            <TextView
                android:id="@+id/tv_item_fitting_record_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/black_242424"
                android:textSize="@dimen/text_15sp"
                tools:text="2022-06-21 13:20" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_little_right_arrow" />
        </LinearLayout>
    </com.jieli.btsmart.ui.widget.color_cardview.CardView>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_del_fitting_history"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/bg_btn_red_shape_radius_8dp"
            android:text="@string/delete"
            android:textAllCaps="false"
            android:textColor="@color/white_ffffff"
            android:textSize="@dimen/text_14sp" />
    </FrameLayout>
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>
