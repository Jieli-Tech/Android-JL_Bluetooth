<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_voice_setting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:textSize="@dimen/text_16sp"
        android:textColor="@color/black_242424"
        app:layout_constraintEnd_toStartOf="@+id/iv_voice_setting_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/high_sensitivity"/>

    <TextView
        android:id="@+id/tv_voice_setting_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/gray_8B8B8B"
        android:textSize="@dimen/text_13sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/tv_voice_setting"
        app:layout_constraintTop_toBottomOf="@+id/tv_voice_setting"
        app:layout_constraintEnd_toEndOf="@+id/tv_voice_setting"
        app:layout_constraintBottom_toTopOf="@+id/view_line"
        tools:text="功能描述"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/iv_voice_setting_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_choose_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/view_line"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="@color/line_color"
        app:layout_constraintTop_toBottomOf="@+id/tv_voice_setting_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_voice_setting"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>