        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="android:textColor">@color/black_3C3B3B</item>
    </style>

    <style name="TextStyle_18sp_black_242424">
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="android:textColor">@color/black_242424</item>
    </style>
    <!--   TextColor: gray-->
    <style name="TextStyle_12sp_gray_A3A3A3">
        <item name="android:textSize">@dimen/text_12sp</item>
        <item name="android:textColor">@color/gray_A3A3A3</item>
    </style>

    <style name="TextStyle_12sp_gray_8B8B8B">
        <item name="android:textSize">@dimen/text_12sp</item>
        <item name="android:textColor">@color/gray_8B8B8B</item>
