    </style>


    <!--ScanDeviceDialog-->
    <style name="BottomToTopAnim">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="TopToBottomAnim">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>

    <style name="music_seek_bar">
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
        <item name="android:background">@color/white_ffffff</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingEnd">7dp</item>

        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/bg_music_seekbar_drawable</item>
        <item name="android:scrollbarStyle">insideInset</item>
        <item name="android:thumb">@drawable/bg_music_seekbar_thumb</item>
    </style>
    <!--ColorCardView-->
    <style name="Base.CardView" parent="android:Widget" tools:ignore="PrivateResource">
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardMaxElevation">@dimen/cardview_default_elevation</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="CardView" parent="Base.CardView" tools:ignore="PrivateResource" />

    <style name="CardView.Dark" tools:ignore="PrivateResource">
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
    </style>

    <style name="CardView.Light" tools:ignore="PrivateResource">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>

    <style name="RbtnLightFlash">
        <item name="android:button">@null</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="textColor">@drawable/color_light_flash_selector</item>
        <item name="background">@drawable/bg_light_flash_selector</item>
        <item name="wTextSize">@dimen/text_14sp</item>

    </style>

    <style name="TvLightControlTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="textColor">@color/gray_text_5A5A5A</item>
        <item name="wTextSize">@dimen/text_15sp</item>

    </style>


    <style name="common_seek_bar">
        <item name="android:minHeight">3.5dp</item>
        <item name="android:maxHeight">3.5dp</item>
        <item name="android:background">@color/text_transparent</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">11dp</item>
        <item name="android:paddingEnd">11dp</item>
        <item name="android:splitTrack">false</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/bg_common_seekbar_drawable</item>
        <item name="android:scrollbarStyle">insideInset</item>
        <item name="android:thumb">@drawable/ic_common_seekbar_thumb</item>
    </style>

    <style name="TextDeviceListName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxEms">9</item>
        <item name="android:textColor">@color/black_242424</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingStart">5dp</item>
    </style>

    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="GrayLineEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#EBEBEB</item>
        <item name="colorControlActivated">#EBEBEB</item>
    </style>

    <style name="CommonButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn_purple_gray_24_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
    </style>

    <style name="BackgroundCardView" parent="CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/white_ffffff</item>
    </style>
</resources>
