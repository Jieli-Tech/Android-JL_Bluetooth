<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>

    <style name="MyDialogTheme" parent="AppTheme">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="MyDialogTopTheme" parent="AppTheme">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>

    <style name="MyDialogAlphaExitTheme" parent="AppTheme">
        <item name="android:windowExitAnimation">@anim/alpha_to_hide</item>
    </style>

    <style name="FloatingViewAnim" parent="AppTheme">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
    </style>


    <style name="eq_value_text">
        <item name="android:textColor">#8A8A8A</item>
        <item name="android:textSize" tools:ignore="SpUsage">14dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>


    <style name="blue_eq_seek_bar">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="rsb_mode">single</item>
        <item name="rsb_min">-12</item>
        <item name="rsb_max">12</item>
        <item name="rsb_progress_height">3dp</item>

        <item name="rsb_thumb_inactivated_drawable">@drawable/ic_eq_btn_slider_nor</item>
        <item name="rsb_thumb_drawable">@drawable/ic_eq_btn_slider_sel</item>
        <item name="rsb_progress_default_color">#ffe8e8e8</item>
        <item name="rsb_progress_color">@color/color_main</item>
    </style>

    <style name="TextStyle_18sp_white_ffffff">
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="android:textColor">@color/white_ffffff</item>
    </style>
