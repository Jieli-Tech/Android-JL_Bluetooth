<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom|center"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_product_single_left"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null"
        app:layout_constraintEnd_toStartOf="@+id/iv_product_single_right"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_product_single_quantity"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_headset_left" />

    <ImageView
        android:id="@+id/iv_product_single_right"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_product_single_left"
        app:layout_constraintTop_toTopOf="@+id/iv_product_single_left"
        tools:src="@drawable/ic_headset_right" />

    <TextView
        android:id="@+id/tv_product_single_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableTop="@drawable/ic_quantity_100"
        android:gravity="bottom"
        android:layout_marginTop="11dp"
        android:textColor="@color/black_242424"
        android:textSize="@dimen/text_13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_product_single_left"
        tools:text="@string/product_default_quantity" />

</androidx.constraintlayout.widget.ConstraintLayout>