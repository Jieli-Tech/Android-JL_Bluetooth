<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.jieli.btsmart.ui.widget.color_cardview.CardView
        android:id="@+id/cv_function_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@drawable/ic_selector_card_bg_selector"
        app:cardCornerRadius="7dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardShadowColorEnd="@drawable/ic_function_list_shadow_end_selector"
        app:cardShadowColorStart="@drawable/ic_function_list_shadow_selector"
        app:cardUseCompatPadding="true"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_item_function_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@drawable/ic_local_music_blue" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_item_function_name"
                style="@style/TextStyle_14sp_black_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                app:autoSizeMinTextSize="5sp"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="@dimen/text_14sp"
                tools:text="本地" />
        </LinearLayout>
    </com.jieli.btsmart.ui.widget.color_cardview.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
