<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_net_radio_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32.5dp"
            android:textColor="@color/black_242424"
            android:textSize="@dimen/text_18sp"
            tools:text="广州汽车音乐电台" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp">

            <ImageButton
                android:id="@+id/ib_net_radio_control_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="57dp"
                android:background="@null"
                android:src="@drawable/ic_net_radio_last" />

            <ImageButton
                android:id="@+id/ib_net_radio_control_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="57dp"
                android:background="@null"
                android:src="@drawable/ic_net_radio_play_selector" />

            <ImageButton
                android:id="@+id/ib_net_radio_control_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_net_radio_next" />
        </LinearLayout>
    </LinearLayout>
</layout>