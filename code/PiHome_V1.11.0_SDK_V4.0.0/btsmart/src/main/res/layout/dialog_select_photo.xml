<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/color_bg">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_ffffff"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:stateListAnimator="@null"
        android:text="@string/cancel"
        android:textColor="@color/gray_333333"
        android:textSize="@dimen/text_18sp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_11_11_0_0_white_shape"
        app:layout_constraintBottom_toTopOf="@+id/btn_cancel">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_take_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_transparent"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:stateListAnimator="@null"
            android:text="@string/take_photo"
            android:textColor="@color/gray_333333"
            android:textSize="@dimen/text_18sp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_select_from_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_transparent"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:stateListAnimator="@null"
            android:text="@string/choose_from_mobile_album"
            android:textColor="@color/gray_333333"
            android:textSize="@dimen/text_18sp"
            app:layout_constraintTop_toBottomOf="@+id/btn_take_photo" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_E5E5E5"
            app:layout_constraintTop_toBottomOf="@+id/btn_take_photo"
            app:layout_constraintBottom_toTopOf="@+id/btn_select_from_album"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>