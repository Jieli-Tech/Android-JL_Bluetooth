<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white_ffffff"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="3dp">

    <LinearLayout
        android:id="@+id/ll_upgrade_progress_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="26dp">

        <TextView
            android:id="@+id/tv_upgrade_progress_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/gray_text_444444"
            android:textSize="@dimen/text_16sp" />

        <ProgressBar
            android:id="@+id/pb_upgrade_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_seek_bar_drawable"
            android:max="100"
            android:maxHeight="3dp"
            android:minHeight="3dp" />

        <TextView
            android:id="@+id/tv_upgrade_progress_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/gray_text_989898"
            android:textSize="@dimen/text_14sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>